<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.denky.ageis.ActivityMain"
    android:background="@color/white"
    >

    <LinearLayout
        android:id="@+id/universe"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:id="@+id/gotoBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_gravity="center"
            >
            <ImageView
                android:id="@+id/homeBtn"
                android:layout_marginTop="8dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/home"
                android:layout_marginLeft="5dp"
                android:layout_alignParentLeft="true"
                />
            <ImageView
                android:id="@+id/screenBtn"
                android:layout_marginTop="8dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/screenbtn"
                android:layout_marginRight="70dp"
                android:layout_alignParentRight="true"
                />
            <ImageView
                android:id="@+id/renewBtn"
                android:layout_marginTop="8dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/returnbtnblack"
                android:layout_marginRight="105dp"
                android:layout_alignParentRight="true"
                />
            <ImageView
                android:id="@+id/lockBtn"
                android:layout_marginTop="8dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/lock"
                android:layout_marginRight="35dp"
                android:layout_alignParentRight="true"
                />

            <ImageView
                android:id="@+id/settingBtn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/setting"
                android:layout_alignParentRight="true"/>

            <EditText
                android:textColorHint="@color/grey"
                android:hint="Search or Input URL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/uri"
                android:imeOptions="actionGo"
                android:inputType="text"
                android:layout_marginLeft="35dp"
                android:paddingLeft="10dp"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/renewBtn"
                android:layout_toStartOf="@+id/renewBtn"
                android:selectAllOnFocus="true"
                />

        </RelativeLayout>
        <ProgressBar
            android:id="@+id/progressBar"
            android:minHeight="2dip"
            android:maxHeight="2dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            style="@android:style/Widget.ProgressBar.Horizontal" />
        <!-- 웹뷰 확장 -->
        <com.example.denky.ageis.CustomizedWebView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/wv" />
    </LinearLayout>

</RelativeLayout>
